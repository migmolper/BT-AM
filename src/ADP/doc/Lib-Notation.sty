% Integral
\newcommand{\integral}[2]{
 \IfStrEqCase{#1}{
    {2}{\ensuremath{\int_{\Gamma_{\sigma}}{#2}\ dA}}
    {3}{\ensuremath{\int_{\mathcal{B}}{#2}\ dV}}
  }
}

\newcommand{\integralfracture}[1]{\ensuremath{\int_{\mathcal{B} \setminus C}{#1}\ dA}}

\newcommand{\INTEGRAL}[2]{
  \IfStrEqCase{#1}{
    {2}{\ensuremath{\int_{\Gamma_{\sigma}}{#2}\ d\Gamma}}
    {3}{\ensuremath{\int_{\mathcal{B}_0}{#2}\ dV}}
  }
}


